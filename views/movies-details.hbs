<div>
    <a href="/movies">Go back</a>
    <img src={{movie.image}} />
    <h1>{{movie.title}}</h1>
    <h2>{{movie.director}}</h2>
    <h2>Stars:</h2>
    <ul>
        {{#each movie.stars}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <p>{{#each movie.showtimes}}{{this}} | {{/each}}</p>
</div>
